<odoo>
    <data>
        <record id="view_razorpay_settlement_compute_wizard" model="ir.ui.view">
            <field name="name">razorpay.settlement.compute.form</field>
            <field name="model">razorpay.settlement.compute</field>
            <field name="arch" type="xml">
                <form string="Parameters">
                    <p>
                        Fetch all the razorpay settlements.
                    </p>
                    <group>
                        <field name="date"/>
                        <field name="settlement_id"/>
                    </group>
                    <footer>
                        <button name="action_razorpay_fetch" string="Fetch Settlements" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_razorpay_settlement_compute" model="ir.actions.act_window">
            <field name="name">Fetch Settlements</field>
            <field name="res_model">razorpay.settlement.compute</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="action_razorpay_settlement_compute" id="menu_razorpay_settlement_compute" parent="menu_razorpay_payments"
                  sequence="2"/>

    </data>
</odoo>