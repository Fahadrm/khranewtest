<odoo>
    <data>
        <record id="razorpay_payment_rule_list" model="ir.ui.view">
            <field name="name">razorpay.payment.rule.list</field>
            <field name="model">razorpay.payment.rule</field>
            <field name="arch" type="xml">
                <tree string="Razorpay Rules">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="amount_percentage"/>
                </tree>
            </field>
        </record>

        <record id="razorpay_payment_rule_form" model="ir.ui.view">
            <field name="name">razorpay.payment.rule.form</field>
            <field name="model">razorpay.payment.rule</field>
            <field name="arch" type="xml">
                <form string="Razorpay Rules">
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group name="main_details" col="4">
                            <field name="code"/>
                            <field name="amount_percentage"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_razorpay_payment_rule_filter" model="ir.ui.view">
            <field name="name">razorpay.payment.rule.select</field>
            <field name="model">razorpay.payment.rule</field>
            <field name="arch" type="xml">
                <search string="Search Razorpay Rule">
                    <field name="name" string="Razorpay Rules"
                           filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                </search>
            </field>
        </record>

        <record id="action_razorpay_payment_rule_form" model="ir.actions.act_window">
            <field name="name">Razorpay Rules</field>
            <field name="res_model">razorpay.payment.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="view_razorpay_payment_rule_filter"/>
        </record>

        <menuitem name="Razorpay" id="razorpay_payment_base_menu"/>

        <menuitem
                id="menu_razorpay_payments"
                name="Payments"
                parent="razorpay_payment_base_menu"
                sequence="1"
        />

        <menuitem
                id="menu_razorpay_payment_configuration"
                name="Configuration"
                parent="razorpay_payment_base_menu"
                sequence="2"
        />

        <menuitem
                id="menu_action_razorpay_payment_rule_form"
                action="action_razorpay_payment_rule_form"
                name="Rules"
                parent="menu_razorpay_payment_configuration"
                sequence="1"/>
    </data>
</odoo>